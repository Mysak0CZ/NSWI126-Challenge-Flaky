{
	"extends": "../tsconfig.common.json",
	"compilerOptions": {
		"lib": ["ES2023"],
		"target": "ES2023",
		"module": "Node16",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"composite": true,

		"noEmit": true,
		"noEmitOnError": true,
		"sourceMap": true,
		"removeComments": true,

		"strict": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"isolatedModules": true,
		"declaration": true,
		"types": [
			"@types/node"
		]
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": [
		"webpack.config.ts"
	]
}
