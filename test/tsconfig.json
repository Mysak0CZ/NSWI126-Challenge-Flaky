{
	"compilerOptions": {
		"target": "ES2023",
		"module": "Node16",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"resolveJsonModule": true,

		"noEmit": false,
		"noEmitOnError": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,

		"strict": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"isolatedModules": true,

		"lib": [
			"ES2023",
			"DOM"
		],
		"types": [
			"@types/jest",
			"@testing-library/jest-dom",
			"offscreencanvas"
		],
		"jsx": "react",

		"rootDir": ".."
	},
	"include": [
		"../src/**/*.d.ts",
		"../src/**/*.ts",
		"../src/**/*.tsx",
		"./**/*.ts",
		"./**/*.tsx"
	],
}
